</Landing>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: var(--color-header-bg);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 1.125rem;
  }

  .logo span {
    background: linear-gradient(135deg, var(--color-accent), #ff6b00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-button {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 0.5rem;
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    transition: all 0.2s;
  }

  .nav-button:hover {
    background: var(--color-accent-10);
    border-color: var(--color-accent);
    color: var(--color-accent);
    box-shadow: 0 0 20px var(--color-accent-glow);
  }

  .nav-button:active {
    box-shadow:
      0 0 30px var(--color-accent-glow),
      0 0 60px var(--color-accent-20);
  }

  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 0.5rem;
    color: var(--color-text-muted);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .nav-icon:hover {
    color: var(--color-accent);
    background: var(--color-accent-10);
  }

  .theme-toggle .moon {
    display: none;
  }
  :global([data-theme='light']) .theme-toggle .sun {
    display: none;
  }
  :global([data-theme='light']) .theme-toggle .moon {
    display: block;
  }

  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem 4rem;
    overflow: hidden;
  }

  .hero-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4rem;
    max-width: 1400px;
    width: 100%;
  }

  .hero-content {
    position: relative;
    text-align: left;
    flex: 0 1 450px;
    min-width: 300px;
  }

  .hero h1 {
    font-size: clamp(3rem, 10vw, 5rem);
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-accent), #ff6b00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 500px;
    margin: 0 0 2rem;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    flex-wrap: wrap;
  }

  .hero-image {
    flex: 1 1 650px;
    max-width: 800px;
    min-width: 300px;
  }

  .terminal-window {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: #1a1a1a;
    border: 1px solid var(--color-border);
    box-shadow:
      0 0 40px var(--color-accent-glow),
      0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }

  .terminal-header {
    display: flex;
    gap: 6px;
    padding: 8px 12px;
    background: #2d2d2d;
    border-bottom: 1px solid var(--color-border);
  }

  .terminal-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .terminal-dot.red {
    background: #ff5f57;
  }

  .terminal-dot.yellow {
    background: #febc2e;
  }

  .terminal-dot.green {
    background: #28c840;
  }

  .terminal-window img {
    display: block;
    width: 100%;
    height: auto;
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .button.primary {
    background: var(--color-accent);
    color: var(--color-button-text);
    box-shadow: 0 0 20px var(--color-accent-glow);
  }

  .button.primary:hover {
    box-shadow:
      0 0 30px var(--color-accent-glow),
      0 0 60px var(--color-accent-glow);
    transform: translateY(-2px);
  }

  .button.secondary {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
  }

  .button.secondary:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 20px var(--color-accent-glow);
  }

  section {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  section h2 {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: 2.5rem;
    background: linear-gradient(135deg, var(--color-accent), #ff6b00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .install {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    padding: 4rem 2rem;
  }

  .install h2 {
    margin-bottom: 2rem;
  }

  .install :global(.install-tabs) {
    background: var(--color-surface);
    border-radius: 1rem;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    margin: 0;
  }

  .features {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 1200px;
    padding: 4rem 2rem;
  }

  .scroll-nav {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--color-accent-10);
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    box-shadow:
      0 0 20px var(--color-accent-glow),
      0 0 40px var(--color-accent-10);
    transition: all 0.3s ease;
    animation: bounce 2s infinite;
    z-index: 50;
  }

  .scroll-nav:hover {
    background: var(--color-accent-20);
    border-color: var(--color-accent);
    box-shadow:
      0 0 30px var(--color-accent-glow),
      0 0 60px var(--color-accent-20);
    animation: none;
    transform: scale(1.1);
  }

  .scroll-nav.at-bottom {
    transform: rotate(180deg);
  }

  .scroll-nav.at-bottom:hover {
    transform: rotate(180deg) scale(1.1);
  }

  .scroll-nav.hidden {
    opacity: 0;
    pointer-events: none;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-8px);
    }
    60% {
      transform: translateY(-4px);
    }
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    width: 100%;
  }

  @media (max-width: 900px) {
    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }

  .feature-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: all 0.3s;
  }

  .feature-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 20px var(--color-accent-10);
    transform: translateY(-4px);
  }

  .feature-icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .feature-card h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .feature-card p {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
  }

  .why-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .why-item {
    text-align: center;
    padding: 1.5rem;
  }

  .why-item h3 {
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .why-item p {
    color: var(--color-text-muted);
  }

  .footer {
    border-top: 1px solid var(--color-border);
    padding: 2rem;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: var(--color-text-muted);
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  .footer-copyright {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  @media (max-width: 1024px) {
    .hero-container {
      flex-direction: column;
      gap: 3rem;
    }

    .hero-content {
      text-align: center;
      flex: none;
      max-width: 600px;
    }

    .description {
      margin: 0 auto 2rem;
    }

    .hero-buttons {
      justify-content: center;
    }

    .hero-image {
      flex: none;
      width: 100%;
      max-width: 800px;
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: 0.75rem 1rem;
    }

    .hero {
      padding: 5rem 1rem 3rem;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.theme-toggle')
  const html = document.documentElement

  const stored = localStorage.getItem('theme')
  if (stored) {
    html.setAttribute('data-theme', stored)
  } else if (window.matchMedia('(prefers-color-scheme: light)').matches) {
    html.setAttribute('data-theme', 'light')
  }

  toggle?.addEventListener('click', () => {
    const current = html.getAttribute('data-theme')
    const next = current === 'light' ? 'dark' : 'light'
    html.setAttribute('data-theme', next)
    localStorage.setItem('theme', next)
  })

  const sections = ['hero', 'install', 'features']
  const scrollNav = document.getElementById('scroll-nav')

  function updateScrollNav() {
    const scrollY = window.scrollY
    const windowHeight = window.innerHeight
    const docHeight = document.documentElement.scrollHeight

    let currentSection = 0
    sections.forEach((id, index) => {
      const el = document.querySelector(id === 'hero' ? '.hero' : `#${id}`) as HTMLElement | null
      if (el && scrollY >= el.offsetTop - windowHeight / 2) {
        currentSection = index
      }
    })

    const atBottom = scrollY + windowHeight >= docHeight - 100

    if (atBottom) {
      scrollNav?.classList.add('at-bottom')
      scrollNav?.setAttribute('href', '#')
    } else {
      scrollNav?.classList.remove('at-bottom')
      const nextSection = sections[currentSection + 1]
      if (nextSection) {
        scrollNav?.setAttribute('href', `#${nextSection}`)
      } else {
        scrollNav?.classList.add('hidden')
      }
    }

    if (!atBottom && currentSection < sections.length - 1) {
      scrollNav?.classList.remove('hidden')
    }
  }

  window.addEventListener('scroll', updateScrollNav)
  updateScrollNav()
</script>
