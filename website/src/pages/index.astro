---
import Landing from '../layouts/Landing.astro';
import InstallTabs from '../components/InstallTabs.astro';
---

<Landing title="jolt - Battery Monitor for macOS" description="A beautiful terminal-based battery and energy monitor for macOS">
  <header class="header">
    <a href="/jolt/" class="logo">
      <img src="/jolt/favicon.svg" alt="" width="28" height="28" />
      <span>jolt</span>
    </a>
    <nav class="nav">
      <a href="/jolt/docs/getting-started/" class="nav-button">Documentation</a>
      <a href="https://github.com/jordond/jolt" target="_blank" rel="noopener" class="nav-icon" aria-label="GitHub">
